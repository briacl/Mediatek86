<Window x:Name="Connexion" x:Class="Mediatek86.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion" Height="174" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Width="100">Login:</Label>
            <TextBox x:Name="LoginTextBox" Width="150"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Width="100">Mot de Passe:</Label>
            <PasswordBox x:Name="PasswordBox" Width="150"/>
        </StackPanel>

        <Button Grid.Row="2" Width="100" HorizontalAlignment="Right" Click="LoginButton_Click">Connexion</Button>
    </Grid>
</Window>

